<Window x:Class="ef05_library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ef05_library"
        mc:Ignorable="d"
        Title="Library" Height="600" Width="800" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Padding="5,5,0,5">
            <MenuItem Header="Book list" x:Name="M_booklist" Click="M_booklist_Click"/>
            <MenuItem Header="Book" x:Name="M_book" Click="M_book_Click"/>
            <MenuItem Header="Borrowing" x:Name="M_borrowing" Click="M_borrowing_Click"/>
            <MenuItem Header="Student list" x:Name="M_strudentlist" Click="M_strudentlist_Click"/>
        </Menu>

        <Frame x:Name="FRM_nyito" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
